<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    >
    <RelativeLayout
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/bg2"
        android:id="@+id/rela1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/txt"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="My Profile"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_alignParentEnd="true"
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"

            android:backgroundTint="@color/black"
            android:background="@drawable/baseline_cancel_24"
            />
    </RelativeLayout>
    <RelativeLayout
android:layout_marginTop="50dp"
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout

android:background="@drawable/green_edittext_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp">


            <LinearLayout

                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"

                android:backgroundTint="@color/white"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">

                    <RelativeLayout

                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <ProgressBar
                            android:id="@+id/pgbar"
                       android:layout_centerVertical="true"

                            android:layout_centerHorizontal="true"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            />
                        <de.hdodenhof.circleimageview.CircleImageView
android:layout_marginTop="20dp"
                            android:id="@+id/profile"
                            android:layout_width="80dp"
                            android:layout_gravity="center"
                            android:layout_height="80dp"
                            android:background="@drawable/profilee"
                            android:backgroundTint="@color/buttonBg"
                            app:layout_constraintStart_toStartOf="parent"

                            app:layout_constraintVertical_bias="0.097" />
                        <TextView
                            android:layout_below="@+id/profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                            android:text="Profile"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:textStyle="italic" />

                    </RelativeLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:hint="User Name"

                        app:boxBackgroundColor="@color/white"

                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/buttonBg"
                        app:boxStrokeWidth="1dp"


                        app:endIconMode="clear_text"
                        app:endIconTint="@color/buttonBg"
                        app:hintEnabled="true"
                        app:hintTextColor="@color/buttonBg"


                        app:placeholderText="xyz"
                        app:startIconDrawable="@drawable/profilee"
                        app:startIconTint="@color/buttonBg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ed_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"


                            android:gravity="center_vertical"
                            android:inputType="textWebEmailAddress"

                            android:maxLength="20"
                            android:textColor="@color/black"

                            android:textColorHint="@color/buttonBg"


                            android:textCursorDrawable="@drawable/edt_cursor_bg"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/box"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_marginTop="10dp"

                        android:hint="Ph Number"

                        app:boxBackgroundColor="@color/white"
                        app:boxBackgroundMode="outline"
                        app:boxCornerRadiusBottomEnd="10dp"
                        app:boxCornerRadiusBottomStart="10dp"
                        app:boxCornerRadiusTopEnd="10dp"
                        app:boxCornerRadiusTopStart="10dp"
                        app:boxStrokeColor="@color/buttonBg"


                        app:boxStrokeWidth="1dp"
                        app:endIconMode="clear_text"
                        app:endIconTint="@color/buttonBg"
                        app:hintEnabled="true"
                        app:hintTextColor="@color/buttonBg"
                        app:placeholderText="799700000"
                        app:prefixText="+91"
                        app:prefixTextColor="@color/buttonBg"
                        app:startIconDrawable="@drawable/baseline_phone_android_24"
                        app:startIconTint="@color/buttonBg">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/ed_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:inputType="number"
                            android:maxLength="10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/buttonBg"
                            android:textCursorDrawable="@drawable/edt_cursor_bg"
                            android:textSize="14sp" />
                    </com.google.android.material.textfield.TextInputLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="15dp"
                        android:id="@+id/update_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_bg"
                        android:backgroundTint="@color/buttonBg"
                        android:drawableStart="@drawable/profilee"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/white"
                        android:gravity="center"
                        android:paddingLeft="30dp"
                        android:textAllCaps="false"
                        android:paddingRight="30dp"
                        android:text="Update"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView" />


                </LinearLayout>


                <!--  <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt"

                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="Password Change?"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/switch_pasword"
                    android:layout_toRightOf="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    />
            </RelativeLayout>-->


                <LinearLayout
                    android:id="@+id/paswd_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <EditText
                        android:id="@+id/pasd_signUp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:drawableLeft="@drawable/paswordd"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/white"
                        android:hint="Password"


                        android:inputType="textVisiblePassword"
                        android:minHeight="48dp"
                        android:paddingLeft="10dp"

                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />

                    <EditText
                        android:id="@+id/confirm_pasd_signUp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_background"
                        android:drawableLeft="@drawable/paswordd"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/white"
                        android:hint="Confirm Password"

                        android:inputType="textPassword"
                        android:minHeight="48dp"
                        android:paddingLeft="10dp"

                        android:textColor="@color/white"
                        android:textColorHint="@color/white" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


    <TextView
       android:layout_below="@+id/cardView"
        android:textSize="12sp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="You can not change your email id due to privacy and policy.if you want then you have to create new account."

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />
</RelativeLayout>