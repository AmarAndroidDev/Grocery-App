<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:backgroundTint="#0096FF"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp">
    <RelativeLayout

        android:layout_width="110dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/offer_price"
            android:textSize="12sp"
            android:text="20% Off"
            android:textStyle="bold"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:gravity="center_horizontal"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
<androidx.cardview.widget.CardView
    android:layout_below="@+id/offer_price"
    android:id="@+id/card_veg"
    app:cardCornerRadius="10dp"
android:layout_centerHorizontal="true"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView

        android:id="@+id/veg_img"
        android:layout_width="80dp"
        android:layout_height="60dp"



        android:scaleType="fitXY" />


    <TextView
        android:visibility="gone"
        android:background="@color/white"
        android:id="@+id/not_available"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxLines="1"
        android:text="not available"
        android:textAllCaps="true"
        android:textColor="@color/merun"
        android:textSize="12sp"
        android:textStyle="bold"
       />
</androidx.cardview.widget.CardView>



        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:gravity="start"
            android:layout_marginLeft="10dp"
android:layout_below="@+id/card_veg"

            android:id="@+id/title_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="onion"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            android:id="@+id/qty_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_below="@+id/card_veg"
android:layout_toRightOf="@+id/title_veg"
android:textColor="@color/grey"
            android:maxLines="1"
            android:text="250gm"

            android:textSize="12sp" />
        <TextView


android:layout_marginStart="15dp"

            android:id="@+id/marketPrice"
            android:layout_width="35dp"
            android:layout_height="18dp"
            android:maxLines="1"
            android:text="22"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:backgroundTint="@color/black"
            android:background="@drawable/minus"

            />
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
android:layout_below="@+id/qty_veg"
android:layout_toRightOf="@+id/marketPrice"
            android:id="@+id/price_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="22"
            android:textColor="@color/grey"
            android:textSize="12sp"

            />


        <RelativeLayout
android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/marketPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">





           <LinearLayout

android:layout_centerHorizontal="true"


          android:gravity="center"
               android:layout_width="match_parent"
               android:layout_height="20dp"

android:background="@drawable/btn_background"
               android:backgroundTint="@color/white"
               >
               <TextView
android:enabled="false"
                   android:id="@+id/add_to_cart"

android:textAllCaps="false"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:maxLines="1"
                   android:text="Add Item"
                   android:textColor="@color/merun"
                   android:textSize="10sp"
                   android:textStyle="bold"
                   />
           </LinearLayout>

              <LinearLayout
                android:visibility="gone"
                  android:id="@+id/cart_layout"
                  android:backgroundTint="@color/white"
                  android:background="@drawable/btn_background"

                  android:layout_gravity="center"
                  android:layout_width="match_parent"
                  android:layout_height="20dp"
                  >

                  <ImageView
                      android:id="@+id/minus_cart"
                    android:layout_margin="5dp"
                      android:background="@drawable/minus"
                      android:layout_weight="1.1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"/>
                  <EditText
                      android:enabled="false"
android:textSize="12sp"
                      android:background="@color/merun"
                      android:id="@+id/quantity"
                      android:text="1"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:layout_weight="1.1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      />
                  <ImageView
                   android:id="@+id/plus_cart"
                      android:layout_margin="5dp"
                      android:background="@drawable/plus"
                      android:layout_weight="1.1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"/>

              </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>