<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Fragment.SellerOrderFragment">

    <LinearLayout
        android:paddingTop="2dp"
android:paddingBottom="5dp"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:background="@color/bg2"
        android:orientation="horizontal">
<ImageView
    android:layout_marginLeft="10dp"
    android:backgroundTint="#FFFF"
android:id="@+id/back"
    android:layout_width="38dp"
    android:layout_height="38dp"
    android:background="@drawable/baseline_arrow_circle_left_24"
    />
        <androidx.cardview.widget.CardView
android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:id="@+id/newOrders"
            android:layout_width="match_parent"
            android:layout_height="35dp"



            android:layout_marginBottom="5dp"

            android:layout_weight="1"

            app:cardCornerRadius="8dp"

            >


            <TextView
                android:id="@+id/price_PDA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_shopping_cart_24"
                android:drawablePadding="10dp"

                android:maxLines="1"
                android:text="New Orders"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView

            android:id="@+id/completeOrders"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            app:cardCornerRadius="8dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/baseline_shopping_cart_24"

                android:drawablePadding="10dp"

                android:maxLines="1"
                android:text="Complete"
                android:textColor="@color/black"
                android:textSize="18dp"

                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/rootLayoutOrder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/root"
        android:orientation="horizontal">

    </LinearLayout>


</RelativeLayout>