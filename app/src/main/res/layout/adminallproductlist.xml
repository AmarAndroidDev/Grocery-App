<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="10dp"
app:cardElevation="5dp"

    >
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
android:layout_weight="1.6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/prdct_img"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:backgroundTint="@color/black"
                android:scaleType="fitXY" />
        </androidx.cardview.widget.CardView>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp">


            <TextView
                android:id="@+id/prdct_name"
                android:layout_width="wrap_content"

                android:layout_height="wrap_content"


                android:gravity="start"
                android:maxLines="1"
                android:text="onion"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/qty_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/prdct_name"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="5dp"
                android:layout_marginEnd="18dp"
                android:gravity="start"
                android:maxLines="1"
                android:text="1kg"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/marketPrice"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_below="@+id/qty_desc"
                android:background="@drawable/minus"
                android:backgroundTint="@color/bg2"
                android:gravity="start"
                android:maxLines="1"
                android:text="22"
                android:textColor="@color/black"
                android:textSize="14sp"

                />

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/marketPrice"
                android:gravity="start"


                android:maxLines="1"
                android:text="22"
                android:textColor="#C2185B"
                android:textSize="14sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:id="@+id/offer_price"
                    android:textSize="14sp"
                    android:text="20% Off"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal"
                    android:background="@drawable/button_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

            </LinearLayout>

        </RelativeLayout>
<RelativeLayout


android:layout_marginBottom="5dp"
    android:layout_weight="2.1"
    android:layout_gravity="start"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ImageView
        android:layout_marginTop="8dp"
        android:id="@+id/editProduct"
        android:background="@drawable/baseline_edit_24"
        android:backgroundTint="@color/buttonBg"
        android:layout_width="25dp"
        android:layout_height="25dp"/>
    <ImageView

        android:layout_alignParentBottom="true"
        android:id="@+id/deleteProduct"
        android:background="@drawable/baseline_delete_24"
        android:backgroundTint="@color/buttonBg"
        android:layout_width="24dp"
        android:layout_height="26dp"/>
</RelativeLayout>
    </LinearLayout>


</androidx.cardview.widget.CardView>