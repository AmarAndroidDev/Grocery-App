<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:backgroundTint="@color/bg2"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"

    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:id="@+id/card_veg"
    app:cardCornerRadius="10dp"
  android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/veg_img"
        android:layout_width="170dp"
        android:layout_height="150dp"



        android:scaleType="fitXY" />
    <TextView
        android:id="@+id/offer_price"
        android:textSize="15sp"
        android:text="20% Off"
        android:paddingStart="10dp"
        android:paddingEnd="15dp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:background="@drawable/offer_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
</androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginTop="2dp"
            android:layout_marginRight="10dp"
            android:gravity="start"
            android:layout_marginLeft="10dp"
android:layout_below="@+id/card_veg"

            android:id="@+id/title_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="onion"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginTop="2dp"
            android:gravity="start"
            android:id="@+id/qty_veg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
android:layout_below="@+id/card_veg"
android:layout_toRightOf="@+id/title_veg"
android:textColor="@color/grey"
            android:maxLines="1"
            android:text="250gm"

            android:textSize="15sp" />
        <TextView


android:layout_marginStart="10dp"
android:layout_below="@+id/title_veg"
            android:id="@+id/marketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="22"
            android:textColor="@color/grey"
            android:textSize="15sp"

            />



        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="8dp"
            android:layout_below="@+id/marketPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <TextView


                android:id="@+id/price_veg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="22"
                android:textColor="@color/white"
                android:textSize="14sp"

                />

           <LinearLayout

           android:id="@+id/add_to_cart"
               android:layout_marginLeft="55dp"
          android:gravity="center"
               android:layout_width="90dp"
               android:layout_height="25dp"

android:background="@drawable/btn_background"
               android:backgroundTint="@color/white"
               >
               <TextView



                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:maxLines="1"
                   android:text="ADD"
                   android:textColor="@color/merun"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   />
           </LinearLayout>

              <LinearLayout
                  android:visibility="gone"
                  android:id="@+id/cart_layout"
                  android:backgroundTint="@color/white"
                  android:background="@drawable/btn_background"
                  android:layout_marginLeft="50dp"
                  android:layout_gravity="center"
                  android:layout_width="90dp"
                  android:layout_height="25dp"
                  >

                  <ImageView
                      android:id="@+id/minus_cart"
                    android:layout_margin="5dp"
                      android:background="@drawable/minus"
                      android:layout_weight="1.1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"/>
                  <EditText
                      android:enabled="false"

                      android:background="@color/merun"
                      android:id="@+id/quantity"
                      android:text="1"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textColor="@color/white"
                      android:layout_weight="1.1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      />
                  <ImageView
                   android:id="@+id/plus_cart"
                      android:layout_margin="5dp"
                      android:background="@drawable/plus"
                      android:layout_weight="1.1"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"/>

              </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>



</androidx.cardview.widget.CardView>