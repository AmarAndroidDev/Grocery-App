<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_height="wrap_content">
<LinearLayout
    android:paddingBottom="30dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:background="@color/bg2"
        android:id="@+id/rela1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:id="@+id/txt"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
            android:text="My Address"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_alignParentEnd="true"
            android:id="@+id/cancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
         android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"

            android:backgroundTint="@color/black"
            android:background="@drawable/baseline_cancel_24"
            />
    </RelativeLayout>



    <LinearLayout
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/red"
            android:background="@drawable/baseline_location_on_24"
            />
        <TextView
            android:id="@+id/fullAddress"
            android:layout_marginTop="5dp"
            android:text=""
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton

        android:layout_marginTop="20dp"
        android:id="@+id/current_Address"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/buttonBg"
        android:drawableStart="@drawable/baseline_gps_fixed_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:textAllCaps="false"
        android:paddingRight="20dp"
        android:text="Use my current address"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:visibility="gone"
        android:enabled="false"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_adress_update"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"

        android:drawableStart="@drawable/baseline_add_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:textAllCaps="false"
        android:paddingRight="20dp"
        android:text="Add Address"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        />

</LinearLayout>
</androidx.cardview.widget.CardView>