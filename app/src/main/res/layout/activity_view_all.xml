<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relative"
    tools:context=".Activity.Activity.ViewAllActivity">


        <LinearLayout

            android:background="@color/bg2"
            android:id="@+id/linear"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginStart="15dp"
                android:backgroundTint="@color/white"
                android:id="@+id/back"
                android:layout_width="match_parent"
                android:layout_weight="2.8"
                android:layout_height="22dp"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:background="@drawable/backarrow" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/edt_Search"
                android:layout_gravity="center"
                android:maxLength="30"
               android:layout_weight="1"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/round_bg"
                android:hint="Search Item..."
             android:drawableTint="@color/fedblack"
                android:drawableStart="@drawable/baseline_search_24"
                android:textSize="14sp"
                android:paddingStart="20dp"
                android:backgroundTint="@color/white"
                />

            <RelativeLayout
                android:layout_gravity="center"

                android:layout_width="match_parent"
                android:layout_weight="2.7"
                android:layout_height="25dp">


                <ImageView
android:layout_marginStart="10dp"
                    android:id="@+id/cart"
                    android:backgroundTint="@color/white"
                    android:layout_width="25dp"
                    android:layout_height="25dp"


                    android:background="@drawable/cart" />
                <TextView
                    android:visibility="gone"
                android:layout_marginStart="25dp"
                    android:id="@+id/cartSize"
android:backgroundTint="@color/red"
                android:background="@drawable/round_button"
                    android:textStyle="bold"

                    android:layout_width="15dp"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="8dp"
                    android:layout_height="15dp"
                    android:textColor="@color/white"
                    />

            </RelativeLayout>

        </LinearLayout>
<LinearLayout
    android:visibility="gone"
android:id="@+id/noResultFound"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:gravity="center"

    android:layout_width="match_parent"
    android:layout_height="200dp"

    >
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/baseline_remove_shopping_cart_24"
        />
    <TextView
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="No Product Found"
        />
    <TextView

        android:layout_marginTop="5dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please try some other product"
        />
</LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="5dp"
android:layout_below="@+id/linear"
        android:id="@+id/single__prdt_rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/checkout_layout"
        android:layout_alignParentBottom="true"
        android:background="@color/bg2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/total"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Total Price:"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_marginBottom="5dp"
            android:layout_below="@+id/total"
            android:layout_marginLeft="55dp"
            android:id="@+id/total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="20"
            android:textColor="#E91E63"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <androidx.cardview.widget.CardView

            android:id="@+id/checkout"
            android:layout_width="130dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="center"

            app:cardCornerRadius="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/white"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"

                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="1"
                android:text="CHECK OUT"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</RelativeLayout>