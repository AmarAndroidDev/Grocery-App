<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    app:cardElevation="10dp"

    android:layout_margin="5dp"





    >
<LinearLayout

    android:layout_marginLeft="5dp"
    android:background="@drawable/greenroundbg"
    android:orientation="horizontal"
android:paddingStart="8dp"
    android:paddingEnd="13dp"
    android:id="@+id/lin1"
    android:layout_width="wrap_content"
    android:layout_height="23dp"
    >
    <TextView
        android:layout_marginLeft="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:gravity="start"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15dp"

        />
    <TextView
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="start"
        android:maxLines="1"
        android:text=""
        android:textColor="@color/white"
        android:textSize="15dp"

        />

</LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:background="@drawable/bg_222"
    android:layout_below="@+id/lin1"
android:layout_marginLeft="5dp"

    android:layout_marginBottom="5dp"
    android:layout_marginRight="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TableLayout
        android:layout_marginLeft="10dp"
        android:id="@+id/table_Layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:layout_marginTop="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"

                android:text="Order Id : "
                android:textColor="@color/merun"
                android:textSize="15sp"

                />
            <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/oreder_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"

                android:text=" "
                android:textColor="@color/merun"
                android:textSize="15sp"

                />




        </TableRow>

        <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="start"
                android:maxLines="1"
                android:text="Customer Name : "
                android:textColor="@color/black"
                android:textSize="15sp"


                />

            <TextView

                android:id="@+id/customer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:gravity="start"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"

                />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"
                android:text="Ph No : "
                android:textColor="@color/black"
                android:textSize="15sp"


                />

            <TextView
                android:id="@+id/ph_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15sp"

                />

        </TableRow>
    </TableLayout>
    <TextView
        android:id="@+id/viewallitem"
        android:drawableRight="@drawable/arroeforeward"
        android:layout_marginRight="10dp"
    android:layout_gravity="end"
        android:text="View Details"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:gravity="center"

        android:layout_marginTop="5dp"
        android:background="@drawable/bg222"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout


            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"
                android:text="Order Status : "
                android:textColor="@color/white"
                android:textSize="15dp"
                android:textStyle="italic"

                />

            <TextView
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/orderstatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="start"

                android:text=""
                android:textColor="@color/white"
                android:textSize="15dp"

                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>










</RelativeLayout>