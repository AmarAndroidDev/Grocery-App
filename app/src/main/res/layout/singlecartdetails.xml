<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:background="@drawable/green_edittext_bg"
android:layout_margin="5dp"




    >
<RelativeLayout
    android:layout_margin="3dp"
    app:cardCornerRadius="15dp"


    app:cardElevation="50dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

<LinearLayout
    android:layout_weight="1.4"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
android:layout_marginStart="1dp"
            android:id="@+id/rooot"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:layout_alignParentLeft="true"

app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/titlee">

            <ImageView

                android:id="@+id/cart_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/black"
                android:scaleType="fitXY" />

            <TextView

                android:id="@+id/not_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1"
                android:text="not available"
                android:textAllCaps="true"
                android:textColor="@color/merun"
                android:textSize="12dp"
                android:textStyle="bold"
                android:visibility="gone" />
        </androidx.cardview.widget.CardView>


</LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintStart_toEndOf="@+id/rooot"
            app:layout_constraintTop_toTopOf="parent">
            <TableLayout
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    >
                   <TextView
                       android:textStyle="bold"
                       android:id="@+id/cart_name"
                       android:text=""
                       android:textSize="14sp"
                       android:textColor="@color/black"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                </TableRow>
                <TableRow
                    >
                   <TextView

                       android:text="Price:"
                       android:textSize="13sp"
                       android:textColor="@color/black"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>
                    <TextView
                        android:gravity="start"
                       android:id="@+id/cart_price"
                       android:text=""
                       android:textSize="13sp"
                       android:textColor="@color/black"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                </TableRow>  <TableRow
                    >
                   <TextView

                       android:text="Total:"
                       android:textSize="13sp"
                       android:textColor="@color/black"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>
 <TextView
     android:gravity="start"
                       android:id="@+id/cart_totalPrice"
                       android:text=""
                       android:textSize="13sp"
                       android:textColor="@color/black"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"/>

                </TableRow>








            </TableLayout>
            <LinearLayout
                android:layout_marginStart="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/qty"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/cart_qty"
                    android:text=""
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1.4"
            android:background="@drawable/green_edittext_bg"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/relativeLayout"
            app:layout_constraintTop_toBottomOf="@+id/titlee">

            <ImageView
                android:id="@+id/minus_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.1"
                android:background="@drawable/minus" />

            <EditText
                android:textSize="12sp"
                android:id="@+id/quantity"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.1"
                android:background="@color/buttonBg"
                android:enabled="false"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/plus_cart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1.1"
                android:background="@drawable/plus" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
</RelativeLayout>