<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
  app:cardElevation="10dp"
   android:layout_margin="5dp"
    android:background="@drawable/round_bg"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"

    >

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


        <androidx.cardview.widget.CardView
android:id="@+id/rooot"
            android:layout_weight="1.28"
            app:cardCornerRadius="10dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView

                android:id="@+id/veg_img_prdct"

                android:layout_width="120dp"
                android:layout_height="110dp"
                android:adjustViewBounds="true"
                android:backgroundTint="@color/black"
                android:scaleType="fitXY" />
            <TextView
                android:id="@+id/offer_percentage"
                android:textSize="15dp"
                android:text="20% Off"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@drawable/offer_background"
                android:layout_width="70dp"
                android:layout_height="20dp"
                />

            <TextView
android:background="@color/white"
             android:visibility="gone"
                android:id="@+id/not_available"
              android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAllCaps="true"
                android:text="not available"
                android:textColor="@color/black"
                android:textSize="15dp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>



    <RelativeLayout
android:layout_weight="1"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/titlee"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="start"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Title  : "

        android:textSize="15dp"

        />
    <TextView

        android:gravity="start"
        android:id="@+id/title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="onion"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        />
</LinearLayout>
        <LinearLayout
            android:id="@+id/qty"
            android:layout_below="@+id/titlee"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="start"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Qty    : "

                android:textSize="15dp"

                />
            <TextView
                android:gravity="start"
                android:id="@+id/qtyy"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="onion"
                android:textColor="@color/black"
                android:textSize="16dp"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/categoryyy"
            android:layout_below="@+id/titleeeeee"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Category: "

        android:textSize="15dp"

        />
    <TextView
        android:gravity="start"
        android:id="@+id/category"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="onion"
        android:textColor="@color/black"
        android:textSize="16dp"

        />
</LinearLayout>
        <LinearLayout
            android:layout_below="@+id/categoryyy"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="start"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Available: "

        android:textSize="15dp"

        />
    <TextView
        android:gravity="start"
        android:id="@+id/available"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="onion"
        android:textColor="@color/black"
        android:textSize="16dp"

        />
</LinearLayout>
        <LinearLayout
            android:layout_below="@+id/qty"
            android:id="@+id/titleeeeee"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:gravity="start"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="Price :"

        android:textSize="15dp"

        />
    <TextView
        android:gravity="start"
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text=" onion"
        android:textColor="@color/merun"
        android:textSize="18dp"
        android:textStyle="bold"
        />
</LinearLayout>














    </RelativeLayout>
    <LinearLayout
        android:layout_weight="1.6"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="25dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="2.5dp"
            android:id="@+id/edit_prdct"
            android:layout_width="20dp"
            android:layout_height="20dp"


            android:backgroundTint="@color/black"
            android:background="@drawable/edit" />
        <ImageView

            android:id="@+id/delete_prdct"
            android:layout_width="20dp"
            android:layout_height="20dp"

android:layout_marginTop="50dp"
            android:backgroundTint="@color/black"
            android:background="@drawable/delete" />
    </LinearLayout>

</LinearLayout>


</androidx.cardview.widget.CardView>