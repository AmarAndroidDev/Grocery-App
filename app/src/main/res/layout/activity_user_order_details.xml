<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Activity.UserOrderDetailsActivity">
  <Toolbar
      android:id="@+id/tool"
      android:background="@color/bg2"
      android:layout_width="match_parent"
      android:layout_height="40dp">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


      <ImageView
android:layout_alignParentStart="true"
          android:layout_marginStart="10dp"
          android:backgroundTint="@color/white"
          android:id="@+id/back"
          android:layout_width="25dp"
          android:layout_height="22dp"
          android:layout_gravity="center"

          android:background="@drawable/backarrow" />
      <TextView

android:layout_centerHorizontal="true"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:maxLines="1"
          android:text="My order Details"
          android:textColor="@color/white"
          android:textSize="20dp"
          android:textStyle="bold"
          />
</RelativeLayout>




  </Toolbar>
  <ScrollView
      android:layout_below="@+id/tool"

      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">





  <RelativeLayout
      android:layout_marginLeft="10dp"
      android:layout_marginRight="10dp"
      android:background="#80228C22"
      android:id="@+id/relative"
android:layout_marginTop="5dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      >

    <TextView

        android:layout_gravity="center_vertical"
        android:id="@+id/root1"
      android:paddingStart="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Id :"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
      <TextView
          android:layout_gravity="center_vertical"
          android:layout_toRightOf="@+id/root1"
          android:id="@+id/orderidd"
          android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
          android:maxLines="1"
        android:textColor="@color/black"
        android:textSize="15sp"


        />
   <ImageView
       android:id="@+id/delete"
       android:layout_marginRight="8dp"
       android:layout_alignParentRight="true"
       android:layout_width="24dp"
       android:layout_height="22dp"
       android:backgroundTint="@color/black"
       android:background="@drawable/baseline_delete_24"
     />
  </RelativeLayout>



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/single_cart_details"
        android:layout_below="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        />
      <TextView
          android:layout_below="@+id/single_cart_details"
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="5dp"

          android:background="@color/grey"
          app:layout_constraintTop_toBottomOf="@+id/cardView3" />
  <androidx.cardview.widget.CardView
      android:layout_below="@+id/single_cart_details"
      android:id="@+id/cardView3"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="2.5dp"


      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.5"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"


        android:layout_marginBottom="10dp">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">


        <TableLayout
            android:id="@+id/table_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <TextView
                android:background="#80228C22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"
android:paddingStart="5dp"
                android:text="Shipping Details : "
                android:textColor="@color/black"
                android:textSize="15sp"

                />




          <TableRow>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:maxLines="1"
                android:text="Customer Name : "
                android:textColor="@color/fedblack"
                android:textSize="15sp"


                />

            <TextView

                android:id="@+id/customer_name"
                android:layout_width="7dp"
                android:layout_height="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp"

                />

          </TableRow>

          <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:maxLines="1"
                android:text="Ph No : "
                android:textColor="@color/fedblack"
                android:textSize="15sp"


                />

            <TextView
                android:id="@+id/ph_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="start"
                android:maxLines="1"
                android:text=""
                android:textColor="@color/black"
                android:textSize="15dp"

                />

          </TableRow>



          <TextView
              android:layout_width="50dp"
              android:layout_height="wrap_content"
              android:gravity="start"
              android:maxLines="1"
              android:text="Address : "
              android:textColor="@color/fedblack"
              android:textSize="15sp"


              />


        </TableLayout>

        <TextView
            android:id="@+id/full_adress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginRight="10dp"

            android:gravity="start"
            android:maxLines="5"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15sp"

            />

      </LinearLayout>
    </RelativeLayout>

  </androidx.cardview.widget.CardView>
      <TextView
          android:layout_below="@+id/cardView3"
android:id="@+id/txt"
          android:layout_width="match_parent"
          android:layout_height="5dp"

          android:background="@color/grey"
 />
  <androidx.cardview.widget.CardView

  android:layout_below="@+id/txt"
      android:background="@color/white"
    android:id="@+id/card"

      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
      >
      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

        <TextView
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#80228C22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:maxLines="1"
            android:paddingStart="5dp"
            android:text="Other Details : "
            android:textColor="@color/black"
            android:textSize="15sp"

            />
        <TableRow>

          <TextView
              android:layout_marginTop="5dp"
              android:layout_marginStart="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="start"
              android:maxLines="1"
              android:text="Date : "
              android:textColor="@color/fedblack"
              android:textSize="15sp"


              />

          <TextView
              android:layout_marginTop="5dp"
              android:id="@+id/date"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:gravity="start"
              android:maxLines="1"
              android:text=""
              android:textColor="@color/black"
              android:textSize="15dp"

              />

        </TableRow>
        <TableRow>

          <TextView
              android:layout_marginTop="5dp"
              android:layout_marginStart="15dp"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:gravity="start"
              android:maxLines="1"
              android:text="Total Amount : "
              android:textColor="@color/fedblack"
              android:textSize="15sp"


              />

          <TextView
              android:layout_marginTop="5dp"
              android:id="@+id/total_amount"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginLeft="10dp"
              android:gravity="start"
              android:maxLines="1"
              android:text=""
              android:textColor="@color/black"
              android:textSize="15dp"

              />

        </TableRow>
      </TableLayout>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView

          android:layout_marginLeft="15dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Payment Mode :"
          android:textColor="@color/fedblack"
          android:textSize="15sp"
          />
      <TextView
          android:id="@+id/payment_mode"
          android:layout_marginLeft="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:maxLines="1"
          android:textColor="@color/black"
          android:textSize="15sp"


          />
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

      <TextView
          android:layout_marginLeft="15dp"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Order Status:"
          android:textColor="@color/black"
          android:textSize="15sp"
          />
      <TextView
         android:id="@+id/orderStatus"
          android:layout_marginLeft="5dp"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text=""
          android:maxLines="1"
          android:textColor="@color/black"
          android:textSize="15sp"


          />
    </LinearLayout>

    </LinearLayout>
  </androidx.cardview.widget.CardView>

      <TextView
          android:layout_width="match_parent"

          android:layout_height="5dp"
          android:layout_below="@+id/card"


          android:layout_marginBottom="255dp"
          android:background="@color/grey" />
    </RelativeLayout>
  </ScrollView>
  <androidx.appcompat.widget.AppCompatButton
      android:layout_alignParentBottom="true"
      android:id="@+id/cancel"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:drawablePadding="10dp"

      android:layout_centerHorizontal="true"
      android:layout_marginTop="20dp"
      android:background="#B3FA0213"

      android:gravity="center"
      android:text="Cancel Order"
      android:textSize="18dp"
      android:textColor="@color/black"
     />
</RelativeLayout>