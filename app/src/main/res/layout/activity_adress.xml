<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activity.Activity.AdressActivity">

    <Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="45dp"
 
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/tit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawablePadding="10dp"
            android:text="My Adress"
            android:textColor="@color/buttonBg"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/curentLocation" />
        <ImageView
            android:id="@+id/back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/backarrow"
            android:backgroundTint="@color/buttonBg" />
    </Toolbar>




    <RelativeLayout

        android:background="@drawable/green_edittext_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/card"
        android:layout_below="@+id/toolbar2"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <LinearLayout
android:paddingTop="10dp"
            android:paddingBottom="10dp"

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
     <TextView
android:layout_marginStart="30dp"
         android:layout_marginEnd="30dp"
        android:background="@drawable/gradiantcenterbg4"
android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_gps_fixed_24"
        android:drawableTint="@color/red"
        android:id="@+id/curentLocation"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
         android:paddingStart="100dp"
         android:paddingRight="100dp"
        android:text="Gps"
        android:textColor="@color/buttonBg"
        android:textSize="14sp"


        />
    <TextView

        android:layout_marginTop="15dp"
android:layout_marginStart="30dp"
         android:layout_marginEnd="30dp"
        android:background="@drawable/gradiantcenterbg4"
android:textStyle="bold"
        android:drawableLeft="@drawable/baseline_edit_24"
        android:drawableTint="@color/black"
        android:id="@+id/edit_manualy"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
         android:paddingStart="70dp"
         android:paddingRight="70dp"
        android:text="Edit Manually"
        android:textColor="@color/buttonBg"
        android:textSize="14sp"


        />


</LinearLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/box"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_marginRight="10dp"
                    android:hint="Apartment/House"
app:hintTextColor="@color/buttonBg"
                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxStrokeColor="@color/buttonBg"
                    app:boxStrokeWidth="1dp"

                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"


                    app:errorIconDrawable="@drawable/baseline_error_24"
                    app:errorIconTint="@color/merun"
                    app:errorTextColor="@color/merun"
                    app:helperTextTextColor="@color/merun"



                    app:startIconDrawable="@drawable/baseline_house_24"
                    app:startIconTint="@color/buttonBg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/apart_house"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
android:enabled="false"
                        android:backgroundTint="@color/white"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/buttonBg"
                        android:gravity="center_vertical"

                        android:inputType="text"
                        android:maxLength="40"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"


                        android:textCursorDrawable="@drawable/edt_cursor_bg"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:hint="Locality"

                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxStrokeColor="@color/buttonBg"
                    app:boxStrokeWidth="1dp"

                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"

                    app:hintTextColor="@color/buttonBg"
                    app:errorIconDrawable="@drawable/baseline_error_24"
                    app:errorIconTint="@color/merun"
                    app:errorTextColor="@color/merun"
                    app:helperTextTextColor="@color/merun"



                    app:startIconDrawable="@drawable/city2"
                    app:startIconTint="@color/buttonBg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/locality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:enabled="false"
                        android:backgroundTint="@color/white"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/buttonBg"
                        android:gravity="center_vertical"

                        android:inputType="text"
                        android:maxLength="40"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"


                        android:textCursorDrawable="@drawable/edt_cursor_bg"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>                <com.google.android.material.textfield.TextInputLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:hint="Landmark"

                    app:boxBackgroundMode="outline"
                    app:boxCornerRadiusBottomEnd="15dp"
                    app:boxCornerRadiusBottomStart="15dp"
                    app:boxCornerRadiusTopEnd="15dp"
                    app:boxCornerRadiusTopStart="15dp"
                    app:boxStrokeColor="@color/buttonBg"
                    app:boxStrokeWidth="1dp"

                    app:counterMaxLength="20"
                    app:endIconMode="clear_text"


                    app:errorIconDrawable="@drawable/baseline_error_24"
                    app:errorIconTint="@color/merun"
                    app:errorTextColor="@color/merun"
                    app:helperTextTextColor="@color/merun"

            app:hintTextColor="@color/buttonBg"

                    app:startIconDrawable="@drawable/city2"
                    app:startIconTint="@color/buttonBg">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:enabled="false"
                        android:backgroundTint="@color/white"
                        android:drawablePadding="10dp"
                        android:drawableTint="@color/buttonBg"
                        android:gravity="center_vertical"

                        android:inputType="text"
                        android:maxLength="40"
                        android:paddingLeft="10dp"
                        android:textColor="@color/black"


                        android:textCursorDrawable="@drawable/edt_cursor_bg"
                        android:textSize="14sp" />
                </com.google.android.material.textfield.TextInputLayout>





            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/box"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:hint="City"

                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/buttonBg"
                app:boxStrokeWidth="1dp"

                app:counterMaxLength="20"
                app:endIconMode="clear_text"


                app:errorIconDrawable="@drawable/city2"
                app:errorIconTint="@color/merun"
                app:errorTextColor="@color/merun"
                app:helperTextTextColor="@color/merun"


                app:hintTextColor="@color/buttonBg"
                app:startIconDrawable="@drawable/city2"
                app:startIconTint="@color/buttonBg">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:enabled="false"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/buttonBg"
                    android:gravity="center_vertical"

                    android:inputType="text"
                    android:maxLength="20"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"


                    android:textCursorDrawable="@drawable/edt_cursor_bg"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/box"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:layout_marginRight="10dp"
                android:hint="Pincode"

                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/buttonBg"
                app:boxStrokeWidth="1dp"

                app:counterMaxLength="20"
                app:endIconMode="clear_text"


                app:errorIconDrawable="@drawable/pincode2"
                app:errorIconTint="@color/merun"
                app:errorTextColor="@color/merun"
                app:helperTextTextColor="@color/merun"


                app:hintTextColor="@color/buttonBg"
                app:startIconDrawable="@drawable/pincode2"
                app:startIconTint="@color/buttonBg">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/pin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:enabled="false"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/buttonBg"
                    android:gravity="center_vertical"

                    android:inputType="textEmailAddress"
                    android:maxLength="6"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"


                    android:textCursorDrawable="@drawable/edt_cursor_bg"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fullAdLayout"
android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:hint="Full Adress"

                app:boxBackgroundMode="outline"
                app:boxCornerRadiusBottomEnd="15dp"
                app:boxCornerRadiusBottomStart="15dp"
                app:boxCornerRadiusTopEnd="15dp"
                app:boxCornerRadiusTopStart="15dp"
                app:boxStrokeColor="@color/buttonBg"
                app:boxStrokeWidth="1dp"

                app:counterMaxLength="20"
                app:endIconMode="clear_text"


                app:errorIconDrawable="@drawable/baseline_error_24"
                app:errorIconTint="@color/merun"
                app:errorTextColor="@color/merun"
                app:helperTextTextColor="@color/merun"


                app:hintTextColor="@color/buttonBg"
                app:startIconDrawable="@drawable/baseline_location_on_24"
                app:startIconTint="@color/buttonBg">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/full_adress"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:enabled="false"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="10dp"
                    android:drawableTint="@color/buttonBg"
                    android:gravity="center_vertical"

                    android:inputType="textEmailAddress"
                    android:maxLength="70"
                    android:paddingLeft="10dp"
                    android:textColor="@color/black"


                    android:textCursorDrawable="@drawable/edt_cursor_bg"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </RelativeLayout>




    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerHorizontal="true"

        android:layout_below="@+id/card"

        android:layout_marginTop="20dp"
        android:id="@+id/btn_adress_update"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/button_bg"
        android:backgroundTint="@color/buttonBg"
        android:drawableStart="@drawable/baseline_update_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/white"
        android:gravity="center"
        android:paddingLeft="30dp"
        android:textAllCaps="false"
        android:paddingRight="30dp"
        android:text="Update"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
 />

</RelativeLayout>