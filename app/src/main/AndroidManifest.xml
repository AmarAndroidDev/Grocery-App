<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.groceryappp">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroceryAppp"
        tools:targetApi="31">
        <activity
            android:name=".Activity.Activity.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.PlaceOrderCompleteCelebration"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.EditDeliveryDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.AdminSearchActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.PasswordResetActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.UserOrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.SellerOrderDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.Activity.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.AdressActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.EditProductActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.ViewAllActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Activity.AdminSignUpActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Activity.UserSignUpActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Activity.UserOrderHeaderActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Activity.VegDetailsActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.UserPlaceOrderActivity"
            android:exported="false" />
        <activity
            android:name=".Activity.Activity.AdminHomeActivity"
            android:exported="true" />
        <activity
            android:name=".Activity.Activity.HomeActivity"
            android:exported="true" />

        <service
            android:name=".Activity.ServiceFcm.MyFirebaseMessagingService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>